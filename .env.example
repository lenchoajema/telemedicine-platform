# Example environment variables for telemedicine-platform
# Copy this to .env and fill values before running locally or in Docker.

# Server
PORT=5000
NODE_ENV=development

# Database
DATABASE_URL=postgres://user:password@localhost:5432/telemedicine_db

# JWT / Auth
JWT_SECRET=replace-with-a-strong-secret
JWT_EXPIRES_IN=24h

# Email (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-user
SMTP_PASSWORD=your-smtp-password

# Redis (optional)
REDIS_URL=redis://localhost:6379

# Third-party APIs
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Supabase (optional fallback for serverless functions)
SUPABASE_URL=https://your-project.supabase.co
# For serverless functions use a service_role key; for client usage use the anon key
SUPABASE_KEY=service-role-key-or-anon-key
SUPABASE_ANON_KEY=public-anon-key

# Upstash (optional pubsub)
UPSTASH_REST_URL=https://us1-api.upstash.io
UPSTASH_REST_TOKEN=replace-with-token

# Application specific
SOME_FEATURE_FLAG=false
